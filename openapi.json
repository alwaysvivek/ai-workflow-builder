{
    "openapi": "3.0.0",
    "info": {
        "title": "Workflow Builder API",
        "description": "API for creating and executing multi-step AI workflows.",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "/api",
            "description": "Unified Backend API"
        }
    ],
    "paths": {
        "/health": {
            "get": {
                "summary": "Health Check",
                "responses": {
                    "200": {
                        "description": "System is healthy",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string"
                                        },
                                        "database": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/validate-key": {
            "post": {
                "summary": "Validate API Key",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "api_key": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "api_key"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Key is valid"
                    },
                    "401": {
                        "description": "Invalid key"
                    }
                }
            }
        },
        "/workflows": {
            "post": {
                "summary": "Create Workflow",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "steps": {
                                        "type": "array",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "action": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    }
                }
            }
        },
        "/workflows/run/sync": {
            "post": {
                "summary": "Execute Workflow Synchronously",
                "parameters": [
                    {
                        "name": "x-groq-api-key",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "workflow_id": {
                                        "type": "string"
                                    },
                                    "input_text": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        }
    }
}